{
    "services": [
        {
            "name": "anythingllm",
            "image": "mintplexlabs/anythingllm:master",
            "isMain": true,
            "internalPort": "3001",
            "environment": {
                "STORAGE_DIR": "/app/server/storage",
                "OLLAMA_BASE_URL": "http://ollama:11434",
                "DB_provider": "postgres",
                "DB_host": "${DB_HOST}",
                "DB_port": "5432",
                "DB_user": "${DB_USER}",
                "DB_password": "${DB_PASSWORD}",
                "DB_database": "${DB_NAME}"
            },
            "volumes": [
                {
                    "hostPath": "${APP_DATA_DIR}/anythingllm",
                    "containerPath": "/app/server/storage"
                }
            ],
            "depends_on": [
                "ollama"
            ]
        },
        {
            "name": "ollama",
            "image": "ollama/ollama:latest",
            "volumes": [
                {
                    "hostPath": "${APP_DATA_DIR}/ollama",
                    "containerPath": "/root/.ollama"
                }
            ]
        }
    ]
}