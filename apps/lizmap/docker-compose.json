{
    "services": [
        {
            "name": "lizmap",
            "image": "3liz/lizmap-web-client:3.8",
            "isMain": true,
            "internalPort": "8080",
            "environment": {
                "LIZMAP_QGIS_SERVER_URL": "http://qgis-server:5555/fcgi-bin/qgis_mapserv.fcgi",
                "LIZMAP_REDIS_HOST": "redis"
            },
            "volumes": [
                {
                    "hostPath": "${APP_DATA_DIR}/projects",
                    "containerPath": "/www/lizmap/project-home"
                },
                {
                    "hostPath": "${APP_DATA_DIR}/var",
                    "containerPath": "/www/lizmap/var"
                }
            ],
            "depends_on": [
                "qgis-server",
                "redis"
            ]
        },
        {
            "name": "qgis-server",
            "image": "qgis/qgis-server:latest",
            "environment": {
                "QGIS_SERVER_LOG_STDERR": "1",
                "QGIS_SERVER_LANDING_PAGE_PROJECT": "/data/landing.qgs"
            },
            "volumes": [
                {
                    "hostPath": "${APP_DATA_DIR}/projects",
                    "containerPath": "/data"
                }
            ]
        },
        {
            "name": "redis",
            "image": "redis:alpine"
        }
    ]
}