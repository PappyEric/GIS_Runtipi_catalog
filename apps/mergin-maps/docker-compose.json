{
    "version": "3.7",
    "services": {
        "mergin-maps": {
            "image": "merginmaps/server:latest",
            "container_name": "mergin-maps",
            "restart": "unless-stopped",
            "ports": [
                "${APP_PORT}:80"
            ],
            "environment": [
                "DB_host=gis-postgres",
                "DB_port=5432",
                "DB_user=tipi",
                "DB_pass=password"
            ],
            "volumes": [
                "${APP_DATA_DIR}/data:/data"
            ],
            "networks": [
                "runtipi_network"
            ]
        }
    },
    "networks": {
        "runtipi_network": {
            "external": true
        }
    }
}